{
    "name": "shadz3rg/php-stamp",
    "description": "The XSL-way templating library for MS Office Word DOCX documents.",
    "homepage": "https://github.com/shadz3rg/PHPStamp",
    "type": "library",
    "keywords": ["docx", "template", "word"],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-xsl": "*",
        "ext-zip": "*",
        "ext-dom": "*",
        "shadz3rg/lexer": "^1.0"
    },
    "authors": [
        {
            "name": "Oleg Aleksandrovich",
            "email": "ukhardc0r3@gmail.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "PHPStamp": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "ekino/phpstan-banned-code": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.22"
    },
    "scripts": {
        "codequality": "phpstan analyse src/ -c phpstan.neon --level=max && php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --dry-run",
        "cq": "@codequality",
        "cs": "php-cs-fixer fix --config=.php-cs-fixer.dist.php -v"
    }
}
